<UserControl x:Class="TogglDesktop.Tag"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:toggl="clr-namespace:TogglDesktop"
             mc:Ignorable="d"
             Style="{StaticResource Tag}"
             Margin="0, 3, 6, 3">

    <Border>
        <StackPanel Orientation="Horizontal">
            <TextBlock Name="textBlock" x:FieldModifier="private" Style="{DynamicResource Toggl.CaptionBlackText}" Text="This is tag"/>
            <Button Click="remove_OnClick" Style="{DynamicResource Toggl.CrossButton}" Height="24" Width="24" Margin="0 -3 0 0"/>
        </StackPanel>
    </Border>
</UserControl>
