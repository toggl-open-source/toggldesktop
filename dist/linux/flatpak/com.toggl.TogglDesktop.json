{
    "id": "com.toggl.TogglDesktop",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.12",
    "sdk": "org.kde.Sdk",
    "rename-icon": "toggldesktop",
    "command": "TogglDesktop.sh",
    "finish-args": [
        "--socket=x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=host",
        "--share=network",
        "--share=ipc",
        "--talk-name=org.kde.StatusNotifierWatcher",
        "--talk-name=org.freedesktop.Notifications"
    ],
    "modules": [
        {
            "name": "libXmu",
            "sources": [
                {
                    "type": "git",
                    "url": "git://anongit.freedesktop.org/git/xorg/lib/libXmu",
                    "tag": "libXmu-1.1.3"
                }
            ]
        },
        {
            "name": "TogglDesktop",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DTOGGL_VERSION=7.0.0",
                "-DTOGGL_PRODUCTION_BUILD=OFF",
                "-DTOGGL_ALLOW_UPDATE_CHECK=OFF"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/toggl-open-source/toggldesktop.git",
                    COMMIT_PLACEHOLDER
                }
            ]
        }
    ]
}
